---
import '../styles/reset.css'
import '../styles/variables.css'
import '../styles/global.css'
import LayoutHead from '../components/Layout/LayoutHead.astro';
import LayoutHeader from '../components/Layout/LayoutHeader.astro';
import LayoutFooter from '../components/Layout/LayoutFooter.astro';

interface Props {
  title: string;
  description: string;
  permalink: string;
  socialImg: string;
  socialImgAlt: string;
}

const { title, description, permalink, socialImg, socialImgAlt } = Astro.props;
---
<html lang="en">
	<head>
    <LayoutHead title={title} description={description} permalink={permalink} socialImg={socialImg} socialImgAlt={socialImgAlt}/>
	</head>
  <body>
    <LayoutHeader />
    <main>
      <slot />
    </main>
    <LayoutFooter />
  </body>
</html>