---
import '../styles/reset.css';
import '../styles/variables.css';
import '../styles/global.css';
import LayoutHead from '../components/Layout/LayoutHead.astro';
import LayoutHeader from '../components/Layout/LayoutHeader.astro';
import LayoutFooter from '../components/Layout/LayoutFooter.astro';

interface Props {
	title: string;
	description: string;
	permalink: string;
	socialImg: string;
	socialImgAlt: string;
}

const { title, description, permalink, socialImg, socialImgAlt } = Astro.props;
---

<html lang="en">
	<head>
		<LayoutHead
			title={title}
			description={description}
			permalink={permalink}
			socialImg={socialImg}
			socialImgAlt={socialImgAlt}
		/>
	</head>
	<body>
		<div class="container">
			<LayoutHeader />
			<slot />
			<LayoutFooter />
		</div>
		<style is:global>
			body {
				font-family: 'Source Sans Pro', Arial, Helvetica, sans-serif;
				color: var(--c-font);
			}
			.container {
				display: grid;
				grid-template-columns: 1fr 64rem 1fr;
				grid-template-rows: auto 1fr auto;
				grid-template-areas: '. header .' '. main .' '. footer .';
				row-gap: var(--xxl);
				height: auto;
				min-height: 100vh;
				width: 100%;
				padding: var(--xl) 0;
				> header {
					grid-area: header;
				}
				> main {
					grid-area: main;
				}
				> footer {
					grid-area: footer;
				}
			}
		</style>
	</body>
</html>
