{
	"name": "harambasic.de",
	"version": "3.0.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint . && npm run lint:css",
		"lint:fix": "prettier --check . && eslint . --fix && npm run format:css",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"format": "prettier --write . && npm run format:css",
		"format:css": "stylelint \"src/**/*.{css,svelte}\" --fix",
		"generateFavicons": "node scripts/fetch-favicon/index.js",
		"socialMedia:auto": "node scripts/generate-social-media-preview/generateAutomatic.js",
		"socialMedia:manual": "node scripts/generate-social-media-preview/generateManual.js",
		"newPost": "node scripts/generate-post/index.js",
		"generateCardImages": "node --env-file=.env scripts/generate-card-images/index.js"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/compat": "^1.2.4",
		"@fullhuman/postcss-purgecss": "^7.0.2",
		"@iconify/svelte": "^4.2.0",
		"@playwright/test": "^1.49.1",
		"@supabase/supabase-js": "^2.57.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.15.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"@typescript-eslint/parser": "^8.19.0",
		"autoprefixer": "^10.4.20",
		"commitlint": "^19.8.1",
		"cssnano": "^7.0.6",
		"date-fns": "^4.1.0",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.2",
		"front-matter": "^4.0.2",
		"github-slugger": "^2.0.0",
		"globals": "^15.14.0",
		"js-yaml": "^4.1.0",
		"playwright": "^1.49.1",
		"postcss-cli": "^11.0.1",
		"postcss-html": "^1.8.0",
		"postcss-nested": "^7.0.2",
		"postcss-scss": "^4.0.9",
		"postcss-size": "^5.0.0",
