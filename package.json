{
  "title": "harambasic-de",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "generateFavicons": "node scripts/fetch-favicon/index.js",
    "socialMedia:auto": "node scripts/generate-social-media-preview/generateAutomatic.js",
    "socialMedia:manual": "node scripts/generate-social-media-preview/generateManual.js",
    "newPost": "node scripts/generate-post/index.js",
    "generateCardImages": "node --env-file=.env scripts/generate-card-images/index.js"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/svelte": "^7.0.2",
    "astro": "^5.1.1",
    "astro-icon": "^1.1.5",
    "node-html-parser": "^7.0.1",
    "svelte": "^5.16.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@fontsource/fira-mono": "^5.1.1",
    "@iconify-json/ph": "^1.2.2",
    "@playwright/test": "^1.49.1",
    "@supabase/supabase-js": "^2.47.10",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "date-fns": "^4.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "github-slugger": "^2.0.0",
    "globals": "^15.14.0",
    "openai": "^4.77.0",
    "playwright": "^1.37.1",
    "postcss-nested": "^7.0.2",
    "postcss-size": "^5.0.0",
    "postcss-sorting": "^9.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript-eslint": "^8.18.2"
  }
}
